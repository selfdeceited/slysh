{
  "manifest_version": 2,
  "name": "Slysh",
  "version": "0.1.1",
  "description": "(self) time management for dummies",
  "icons": {
    "128": "favicon.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "permissions": [
    "https://*.google.com/",
    "activeTab",
    "storage",
    "notifications",
    "alarms"
  ],
  "browser_action": {
    "default_icon": "favicon.png",
    "default_popup": "index.html"
  }
}
